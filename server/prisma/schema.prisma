// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  password   String 

  name       String?
  createdAt  DateTime   @default(now())
  role       Role       @default(USER)
  posts      Posts[]

  followers  Follows[]  @relation("following")
  following  Follows[]  @relation("follower")    
  
  favorites  Likes[]
  saves      Saves[]
}

model Follows {
  follower     Users     @relation("follower", fields: [followerId], references: [id])
  followerId   Int
  following    Users     @relation("following", fields: [followingId], references: [id])
  followingId  Int

  createdAt    DateTime  @default(now())

  @@id([followerId, followingId])
}

model Posts {
  id           Int         @default(autoincrement()) @id
  createdAt    DateTime    @default(now())
  content      String?
  public       Boolean     @default(true)

  author       Users       @relation(fields: [authorId], references: [id])
  authorId     Int

  favorites    Likes[]
  saves        Saves[]

  parent       Replies?    @relation("reply")
  replies      Replies[]   @relation("parent")
}

model Replies {
  parent    Posts     @relation("parent", fields: [parentId], references: [id])
  parentId  Int
  reply     Posts     @relation("reply", fields: [replyId], references: [id])
  replyId   Int       @unique

  createdAt    DateTime  @default(now())

  @@id([replyId, parentId])
}

model Likes {
  user       Users     @relation(fields: [userId], references: [id])
  userId     Int
  post       Posts     @relation(fields: [postId], references: [id])
  postId     Int

  createdAt  DateTime  @default(now())

  @@id([userId, postId])
}

model Saves {
  user       Users     @relation(fields: [userId], references: [id])
  userId     Int
  post       Posts     @relation(fields: [postId], references: [id])
  postId     Int

  createdAt  DateTime  @default(now())

  @@id([userId, postId])
}


enum Role {
  USER
  ADMIN
}